<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <title>Todo Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <script>
        var token = document
            .querySelector('meta[name="csrf-token"]')
            .getAttribute("content");

        function updateTodo(id, status) {
            fetch(`/todos/${id}`, {
                method: "put",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    completed: !status,
                    "_csrf": token
                })
            })
            .then((res) => {
                if (res.ok) {
                    window.location.reload(); 
                }
            })
            .catch((err) => console.error(err));
        }

        function deleteTodo(id) {
            fetch(`/todos/${id}`, {
                method: "delete",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
            .then((res) => {
                if (res.ok) {
                    window.location.reload(); 
                }
            })
            .catch((err) => console.error(err));
        }
    </script>
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <header class="text-2xl font-bold mb-4">My Todo-list</header>

            <form action="/todos" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="flex gap-2 py-4">
                    <input type="text" name="title" placeholder="What's next?" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required />
                    <input type="date" name="dueDate" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required />
                    <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-medium">Add</button>
                </div>
            </form>

            <%- include('todos.ejs', { title: "Overdue", store: overdue, countId: "count-overdue" }) %>
            <%- include('todos.ejs', { title: "Due Today", store: dueToday, countId: "count-due-today" }) %>
            <%- include('todos.ejs', { title: "Due Later", store: dueLater, countId: "count-due-later" }) %>
            <%- include('todos.ejs', { title: "Completed", store: allTodos, countId: "count-completed" }) %>
        </div>
    </div>
</body>
</html>
